<!DOCTYPE html>
<html>
  <head>
    <title>Pinfluence</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <% if current_user %>
      <script>
        window.currentUser = {
          "id": <%= current_user.id %>,
          "email": "<%= current_user.email %>"
        };
      </script>
    <% end %>

    <script type="text/javascript">
      window.logoURL = "<%= image_url('pinfluence-logo-purple.png') %>";
    </script>

    <script type="text/javascript">
      window.favicon = "<%= image_url('pinfluence-logo-purple3.png') %>";
    </script>
    <link rel='icon' href="<%= image_url('pinfluence-logo-purple3.png') %>" type='image/x-icon'/ >
    
  </head>

  <body>
    <%= yield %>
  </body>
</html>
